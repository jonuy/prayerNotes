<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: consider using RelativeLayout instead -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	
	<!-- Action Bar -->
	<RelativeLayout
		android:id="@+id/edit_banner"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<!-- Cancel/Back button -->
		<ImageButton android:id="@+id/edit_note_cancel"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_alignParentLeft="true"
			android:src="@drawable/ic_back_unselected"
			android:background="@null"
			/>
		<View android:id="@+id/edit_banner_separator_0"
		  	android:layout_toRightOf="@id/edit_note_cancel"
		  	android:layout_width="1dp"
		  	android:layout_height="36dp"
		  	android:background="#FFFFFFFF"
		  	/>
		<!-- Logo/Title -->
		<TextView
			android:text="@string/app_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/edit_banner_separator_0"/>
		<!-- Delete -->
		<ImageButton android:id="@+id/edit_note_discard"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_alignParentRight="true"
			android:src="@drawable/ic_delete_unselected"
			android:background="@null"/>
		<View android:id="@+id/edit_banner_separator_1"
		  	android:layout_toLeftOf="@id/edit_note_discard"
		  	android:layout_width="1dp"
		  	android:layout_height="36dp"
		  	android:background="#FFFFFFFF"
		  	/>
		<!-- Save -->
		<ImageButton android:id="@+id/edit_note_save"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_toLeftOf="@id/edit_banner_separator_1"
			android:src="@drawable/ic_menu_save"
			android:background="@null"/>
		<View android:id="@+id/edit_banner_separator_2"
		  	android:layout_toLeftOf="@id/edit_note_save"
		  	android:layout_width="1dp"
		  	android:layout_height="36dp"
		  	android:background="#FFFFFFFF"/>
	</RelativeLayout>
	
	<!-- Horizontal line -->
	<View android:id="@+id/edit_div_banner"
    	android:layout_below="@id/edit_banner"
    	android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="#FFFFFFFF" />
	
	<!-- Note Text Box -->
	<EditText android:id="@+id/edit_note_text"
		android:hint="@string/edit_note_text_hint"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:minLines="4"
		android:gravity="top"
		android:textSize="10sp"/>
		
	<!-- Image container to display and remove image -->
	<RelativeLayout android:id="@+id/edit_note_img_container"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="gone">
		<ImageView android:id="@+id/edit_note_img"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_marginLeft="10dp"
			android:layout_centerVertical="true"/>
		<ImageView android:id="@+id/edit_note_img_remove"
			android:src="@drawable/img_remove_icon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginRight="10dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>
	</RelativeLayout>
	
	<!-- CheckBox and accompanying TextView are visibility=gone by default.
		 These elements will only be visible when editing an already existing 
		 note. -->
	<CheckBox android:id="@+id/edit_note_prayedFor"
		android:text="@string/checkbox_prayed_for_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="20dp"
		android:textSize="12sp"
		android:visibility="gone"/>
	<TextView android:id="@+id/edit_note_prayedFor_status"
		android:text="@string/last_prayed_for"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="10sp"
		android:paddingBottom="20dp"
		android:visibility="gone"/>
		
	<!-- Reminder status -->
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/edit_note_alarm_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:text="Reminder set for: "/>
		<ImageView android:id="@+id/edit_note_alarm_remove"
			android:src="@drawable/img_remove_icon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:paddingLeft="6dp"
			android:layout_alignTop="@id/edit_note_alarm_status"
			android:layout_toRightOf="@id/edit_note_alarm_status"
			android:visibility="gone"/>
	</RelativeLayout>
		
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/edit_note_share"
			android:text="@string/edit_share_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<Button android:id="@+id/edit_note_alarm"
			android:text="@string/edit_alarm_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<Button android:id="@+id/edit_note_img_btn"
			android:text="Image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<Button android:id="@+id/edit_note_prayer_btn"
			android:text="Pryr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</LinearLayout>
	
</LinearLayout>
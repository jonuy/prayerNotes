<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	    	<TextView  
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:text="@string/app_name"
			    />
			  <!-- ToDo: change to ImageButton when icons are ready -->
			  <Button android:id="@+id/main_button_add"
			  	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"
			  	android:layout_alignParentRight="true"
			  	android:text="ADD"
			  	/>
    </RelativeLayout>
    <!-- ListView used when data is present -->
    <ListView android:id="@+id/android:list"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:fadeScrollbars="true"
    	/>
    <!-- Optional view if no data is present for the list -->
    <TextView android:id="@+id/android:empty"
    	android:text="@string/main_list_empty"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
</LinearLayout>